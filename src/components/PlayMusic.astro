---
// Este componente es solo el modal con el script que lo muestra una vez
---

<!-- Modal -->
<div class="modal fade" id="exampleModal" data-bs-backdrop="static"  tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content">
        <div class="d-flex justify-content-end m-3">
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body mb-5">
            <p class="text-center text-primary"> <strong>¿Quieres escuchar la música del día?</strong> </p>
          <audio controls autoplay loop class="w-100">
			<source src="/audio.mp3" type="audio/mpeg" />
			Tu navegador no soporta audio.
		  </audio>
        </div>
      </div>
    </div>
</div>
  
  <!-- Script para mostrar el modal solo una vez -->
  <script type="module">
    import 'https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js';
  
    document.addEventListener('DOMContentLoaded', () => {
      const modalShown = sessionStorage.getItem('modalShown');
      const isInicioPage = window.location.pathname.includes('/');
  
      if (!modalShown && isInicioPage) {
        const modal = new bootstrap.Modal(document.getElementById('exampleModal'));
        modal.show();
        sessionStorage.setItem('modalShown', 'true');
      }
    });
  </script>
  